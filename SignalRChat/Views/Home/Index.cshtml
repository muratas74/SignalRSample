@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <script src="~/Scripts/jquery-1.6.4.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="signalr/hubs"></script>
    <script type="text/javascript">
        var chats = $.connection.chatHub;
        chats.connection.start().then(function(e) {
            console.log(e);
        });
    </script>
</head>
<body>
    <div>
        <input type="text" name="username" id="username" />
        <input type="text" name="message" id="message" />
        <input type="button" name="send" id="send" value="send" />
        <div id="messages"></div>
    </div>

<script type="text/javascript">
    //js method
    chats.client.receive = function (username, message) {
        $("#messages").prepend("<div>" + username + ": </div><div>" + message + "</div><br/>");
    }

    //js method
    chats.client.log = function(message) {
        $("#messages").prepend("<div>" + message + "</div>");
    }

    $("#send").click(function (e) {
        e.preventDefault();
        //server method
        chats.server.send($("#username").val(), $("#message").val());
    });

</script>

</body>
</html>